<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="com.example.githubuserapp.view.fragments.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_detail"
            app:destination="@id/detail" />
        <action
            android:id="@+id/action_favorite"
            app:destination="@id/favorite" />
    </fragment>
    <fragment
        android:id="@+id/detail"
        android:name="com.example.githubuserapp.view.fragments.DetailFragment"
        android:label="{Username}"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="Username"
            app:argType="string"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/favorite"
        android:name="com.example.githubuserapp.view.fragments.FavoriteFragment"
        android:label="favorite_fragment"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_detail_favorite"
            app:destination="@id/detail" />
    </fragment>
</navigation>